<Window x:Class="HotelMiamiApp.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelMiamiApp.View"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBox x:Name="SurnameTextBox"
                     Width="300"
                     Height="40"
                     FontSize="18"
                     VerticalContentAlignment="Center"
                     Margin="0 0 0 30"/>
            <TextBox x:Name="NameTextBox"
                     Width="300"
                     Height="40"
                     FontSize="18"
                     VerticalContentAlignment="Center"
                     Margin="0 0 0 30"/>
            <TextBox x:Name="LoginTextBox"
                     Width="300"
                     Height="40"
                     FontSize="18"
                     VerticalContentAlignment="Center"
                     Margin="0 0 0 30"/>
            <PasswordBox x:Name="PasswordTextBox"
                         Width="300"
                         Height="40"
                         FontSize="18"
                         VerticalContentAlignment="Center"
                         Margin="0 0 0 30"/>
            <ComboBox x:Name="RoleComboBox"
                      SelectedIndex="0">
                <ComboBoxItem>Пользователь</ComboBoxItem>
                <ComboBoxItem>Администратор</ComboBoxItem>
            </ComboBox>
            <Button Content="Зарегистрировать"
                    Width="200"
                    Height="40"
                    Margin="0 50 0 0" Click="RegistrateButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
